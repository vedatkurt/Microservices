
@{
    ViewData["Title"] = "Index";
}

@model BasketViewModel

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Basket</h5>

                @if (Model != null && Model.BasketItems.Any())
                {
                    <table class="table table-striped">
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Operations</th>
                        </tr>
                        
                        @foreach (var item in Model.BasketItems)
                        {
                            <tr>
                                <td>@item.CourseName</td>
                                <td>@item.GetCurrentPrice TL @(Model.HasDiscount ? $"({Model.DiscountRate.Value} applied!)":"")</td>
                                <td>
                                    <a class="btn btn-danger" asp-controller="Basket" asp-action="RemoveBasketItem" asp-route-courseId="@item.CourseId">Remove</a>
                                </td>
                            </tr>
                            }
                        
                        @if (Model.HasDiscount) {
                            <tr>
                                <td>Discount Rate</td>
                                <td colspan="2">% @Model.DiscountRate.Value</td>
                            </tr>
                            }
                        
                        <tr>
                            <td>@(Model.HasDiscount ? "Discount Price" : "Total Price")</td>
                            <th colspan="2">@Model.TotalPrice TL</th>
                        </tr>
                        
                    </table>

                    <form asp-controller="Basket" asp-action="ApplyDiscount">

                        @if (Model.HasDiscount)
                        {
                            <div class="alert alert-success">
                                "@Model.DiscountCode" code applied!
                                <a asp-controller="Basket" asp-action="CancelApplyDiscount">Cancel</a>
                            </div>
                        }

                        @if (TempData["discountStatus"] != null && (bool)TempData["discountStatus"] == false)
                        {
                            <div class="text-danger">Discount code invalid!</div>
                        }

                        @if (TempData["discountError"] != null)
                        {
                            <div class="text-danger">TempData["discountError"]</div>
                        }

                        <div class="input-group mb-3">
                            <input class="form-control" type="text" name="DiscountApplyInput.Code" />
                            <button class="=btn btn-outline-secondary" type="submit">Apply</button>
                        </div>

                    </form>
                }
                else
                { 
                    <div class="alert alert-info">Empty Basket</div>
                }
            </div>
        </div>
    </div>
</div>